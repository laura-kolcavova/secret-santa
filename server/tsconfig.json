{
  "compilerOptions": {
    // General
    "target": "es2016",
    "module": "commonjs",

    // Modules
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Type Checking & Safety
    "strict": true,
    "skipLibCheck": true,

    "outDir": "./build",
    "rootDir": "./src",

    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src",
  ]
}
